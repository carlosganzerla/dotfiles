[merge]
	tool = nvimdiff
[core]
	editor = nvim
	pager = less
[pull]
	ff = only
[rerere]
	enabled = true
[alias]
    masterlog = log --oneline --left-right master...HEAD
    graphlog = log --graph --topo-order --pretty='%w(100,0,6)%C(yellow)%h%C(bold)%C(black)%d %C(cyan)%ar %C(green)%an%n%C(bold)%C(white)%s %N' --abbrev-commit
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[advice]
    skippedCherryPicks = false
